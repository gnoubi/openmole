<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <!-- ************************************************************* -->
  <!-- *** POM Relationships *************************************** -->
  <!-- ************************************************************* -->
  <parent>
    <artifactId>openmole-webserver</artifactId>
    <groupId>org.openmole.web</groupId>
    <version>0.8-alpha3</version>
  </parent>
  <artifactId>org.openmole.web.core</artifactId>
  <!-- ************************************************************* -->
  <!-- *** Build Settings ****************************************** -->
  <!-- ************************************************************* -->
  <packaging>bundle</packaging>
  <name>${project.artifactId} ${project.version}</name>
  <description></description>
  <!-- ************************************************************* -->
  <!-- *** Project Information ************************************* -->
  <!-- ************************************************************* -->
  <properties>
    <export.packages>org.openmole.web.*</export.packages>
    <eclipse.buddypolicy>global</eclipse.buddypolicy>
    <bundle.include.resource>src/main/webapp</bundle.include.resource>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.openmole</groupId>
      <artifactId>org.eclipse.jetty</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openmole</groupId>
      <artifactId>org.scalatra</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openmole</groupId>
      <artifactId>ch.qos.logback</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openmole.core</groupId>
      <artifactId>org.openmole.core.serializer</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openmole.ide</groupId>
      <artifactId>org.openmole.ide.core.implementation</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openmole.core</groupId>
      <artifactId>org.openmole.core.implementation</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openmole</groupId>
      <artifactId>com.jolbox.bonecp</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openmole</groupId>
      <artifactId>com.typesafe.slick</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openmole</groupId>
      <artifactId>org.h2</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <!-- TODO implement project-wide -->
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.7</version>
        <extensions>true</extensions>
        <configuration>
          <manifestLocation>target/META-INF</manifestLocation>
          <finalName>${symbolic.name}_${bundle.version}</finalName>
          <instructions>
            <Bundle-Name>${bundle.name}</Bundle-Name>
            <Bundle-SymbolicName>${symbolic.name}</Bundle-SymbolicName>
            <Bundle-Version>${bundle.version}</Bundle-Version>
            <Bundle-Description>${bundle.description}</Bundle-Description>
            <Import-Package>${import.packages}</Import-Package>
            <Export-Package>${export.packages}</Export-Package>
            <Embed-Transitive>${embed-transitive}</Embed-Transitive>
            <!--<Embed-Dependency>${embed-dep}</Embed-Dependency>-->
            <Eclipse-BuddyPolicy>${eclipse.buddypolicy}</Eclipse-BuddyPolicy>
            <Bundle-Activator>${bundle.activator}</Bundle-Activator>
            <Include-Resource>${bundle.include.resource}</Include-Resource>
            <Bundle-ActivationPolicy>${bundle.activationpolicy}</Bundle-ActivationPolicy>
            <_include>${include}</_include>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
